<Window x:Class="Yakovenko_Загородный_клуб.View.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yakovenko_Загородный_клуб.View.Windows"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid Background="LavenderBlush">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="40" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Text="Загородный клуб"/>

        <TextBlock Grid.Row="3" Grid.Column="1" Text="Логин" FontSize="25"  />
        <TextBox Height="50" Grid.Row="3" BorderBrush="Lavender" Grid.Column="3" x:Name="LoginTb" />

        <TextBlock Grid.Row="5" Grid.Column="1" Text="Пароль" FontSize="25" />
        <PasswordBox Height="50" BorderBrush="Lavender" Grid.Row="5" Grid.Column="3" x:Name="PasswordPB"/>

        <Button Height="40" Grid.Row="7" HorizontalAlignment="Center" Width="340" Grid.Column="1" Grid.ColumnSpan="3" Background="Lavender" BorderBrush="Lavender" Content="Зарегистрироваться" Name="LoginBtn" Click="LoginBtn_Click"/>
    </Grid>
</Window>
